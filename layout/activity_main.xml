<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.wirtshauskartn.testcardscanner.MainActivity"
    tools:ignore="ExtraText">


    <SurfaceView
        android:id="@+id/camerapreview"
        android:layout_width="300dp"
        android:layout_height="190dp"
        android:layout_alignParentLeft="false"


        android:layout_alignParentRight="false"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:foregroundGravity="center_horizontal" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/camerapreview"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="38dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="24dp"
        app:srcCompat="@color/common_google_signin_btn_text_light_disabled" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/camerapreview"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_horizontal"

        android:layout_marginTop="40dp"
        android:layout_marginRight="25dp"

        android:background="#00FFFFFF"
        android:paddingTop="10dp"
        android:paddingRight="25dp"
        android:text="BEREIT - NÄCHSTER"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:fontFamily="sans-serif-condensed-medium" />


    <TextView
        android:id="@+id/tischView"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_below="@+id/camerapreview"

        android:layout_marginLeft="18dp"
        android:layout_marginTop="50dp"
        android:background="#00FFFFFF"
        android:text="PLATZ"
        android:textColor="#3F51B5"
        android:textSize="23dp"
        app:fontFamily="sans-serif-condensed-medium" />

    <EditText
        android:id="@+id/editTischNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/camerapreview"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="100dp"
        android:background="#00FFFFFF"
        android:ems="2"
        android:hint="1"
        android:imeOptions="actionDone"
        android:inputType="phone"
        android:text="1"
        android:textColor="#3F51B5"
        android:textSize="30sp" />

    <Button
        android:id="@+id/finishTable"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/camerapreview"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="false"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="25dp"
        android:background="#5C3F51B5"
        android:text="ab-\nschließen"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="18sp" />


    <Button
        android:id="@+id/menue"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="35dp"
        android:background="@android:drawable/ic_menu_preferences"
        android:onClick="GeheZuWirtshaus"
        android:textColor="#00CBC9CC" />

    <Button
        android:id="@+id/button7"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="35dp"
        android:gravity="fill"
        android:onClick="GeheZuFAQ"
        android:text="FAQ"
        android:textColor="#CBC9CC" />

    <Button
        android:id="@+id/controlled"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="false"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:background="#4CAF50"
        android:onClick="checked"
        android:text="OK"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        app:srcCompat="@drawable/brand" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        app:srcCompat="@color/colorAccent" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:layout_marginTop="115dp"
        app:srcCompat="@drawable/visor" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="40dp"
        android:onClick="torchButton"
        app:srcCompat="@drawable/torch" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignTop="@id/camerapreview"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/nttv" />

    <Button
        android:id="@+id/button14"
        android:layout_width="50dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="155dp"
        android:layout_marginBottom="25dp"
        android:background="#F44336"
        android:onClick="denied"
        android:text="NO"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />


</RelativeLayout>