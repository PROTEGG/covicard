<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/encryptedName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_margin="5dp"

        android:textSize="25sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/Mai"
                android:text="E-Mail:"
                android:layout_margin="5dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"


                android:textSize="15sp" />

            <TextView
                android:id="@+id/mail"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/Ver"
                android:text="Verifikation:"
                android:layout_margin="5dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"


                android:textSize="15sp" />

            <TextView
                android:id="@+id/flag"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/Cer"
                android:text="Kontrollnr.\nKartentyp:"
                android:layout_margin="5dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"


                android:textSize="15sp" />

            <TextView
                android:id="@+id/control"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/Leaave"
                android:text="Datum:"
                android:layout_margin="5dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"


                android:textSize="15sp" />

            <TextView
                android:id="@+id/arrival_date"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/Cntroll"
                android:text="gekommen:"
                android:layout_margin="5dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"


                android:textSize="15sp" />

            <TextView
                android:id="@+id/arrival_time"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:textSize="15sp" />

        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/Lea"
                android:text="gegangen:"
                android:layout_margin="5dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"


                android:textSize="15sp" />

            <TextView
                android:id="@+id/leave_time"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/Tbles"
                android:text="Platz:"
                android:layout_margin="5dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"


                android:textSize="15sp" />

            <TextView
                android:id="@+id/table_number"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
